{
  "npmRebuild": true,
  "appId": "com.shreeRampPhysio.invoicing",
  "productName": "Shri Ram Physio",
  "asar": true,
  "directories": {
    "output": "release",
    "buildResources": "assets"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "asarUnpack": [
    "node_modules/better-sqlite3/**/*",
    "node_modules/@prisma/client/**/*",
    "node_modules/.prisma/**/*"
  ],
  "extraResources": [
    {
      "from": "prisma",
      "to": "prisma",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "node_modules/.prisma",
      "to": ".prisma",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "target": "nsis",
    "icon": "assets/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Shri Ram Physio",
    "installerIcon": "assets/icon.ico",
    "uninstallerIcon": "assets/icon.ico",
    "deleteAppDataOnUninstall": false
  },
  "publish": [
    {
      "provider": "github",
      "owner": "Arinjain111",
      "repo": "Shree-ram-physio"
    }
  ]
}
