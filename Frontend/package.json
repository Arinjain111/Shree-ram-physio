{
  "name": "shri-ram-physio-invoicing",
  "version": "1.0.0",
  "description": "Physiotherapy clinic invoicing and patient management system",
  "main": "dist-electron/electron/mainPrisma.js",
  "scripts": {
    "dev": "vite",
    "build": "prisma generate && tsc && vite build && electron-builder",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "start": "npm run build:electron && electron .",
    "package": "npm run build",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "keywords": [
    "electron",
    "invoice",
    "physiotherapy",
    "react",
    "tailwindcss"
  ],
  "author": "Shri Ram Physio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Arinjain111/Shri-ram-physio.git"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0-alpha.25",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^39.2.6",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.32",
    "prisma": "^7.1.0",
    "tailwindcss": "^4.0.0-alpha.25",
    "typescript": "^5.3.3",
    "vite": "^7.2.6",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@prisma/adapter-libsql": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@types/better-sqlite3": "^7.6.13",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.5.0",
    "googleapis": "^128.0.0",
    "electron-updater": "^6.3.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "zod": "^4.1.13"
  },
  "build": {
    "appId": "com.shrirampphysio.invoicing",
    "productName": "Shri Ram Physio",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Arinjain111",
        "repo": "Shri-ram-physio"
      }
    ]
  }
}
